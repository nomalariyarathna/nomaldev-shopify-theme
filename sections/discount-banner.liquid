<div class="nd-steal-banner">
  {% if section.settings.steal_video != blank %}
    <video 
      class="nd-steal-video"
      autoplay
      loop
      muted
      playsinline
      preload="auto"
    >
      <source src="{{ section.settings.steal_video | file_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% else %}
    <div class="nd-video-fallback">
      <p>Video not available. Please upload a valid MP4.</p>
    </div>
  {% endif %}

